# Configuration de la base de données
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=senaskane_db

# JWT Secret (Générez-en un nouveau pour la production!)
JWT_SECRET=your_jwt_secret_here

# Port du serveur
PORT=3000
NODE_ENV=production

# Configuration Email - Option 1: Resend (RECOMMANDÉ pour production)
# Inscrivez-vous sur https://resend.com (gratuit: 100 emails/jour)
# Créez une API key et ajoutez-la ci-dessous
RESEND_API_KEY=re_your_api_key_here

# Configuration Email - Option 2: SMTP (Fallback si Resend non disponible)
# Pour Gmail: Utilisez un "App Password" depuis https://myaccount.google.com/apppasswords
# NOTE: Gmail peut bloquer les serveurs cloud - Resend est plus fiable
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password_here

# Adresse d'expéditeur pour les emails
EMAIL_FROM="Senaskane <noreply@senaskane.com>"

# URL de l'application
APP_URL=https://your-app-url.com

# CORS - Origines autorisées (séparées par des virgules)
ALLOWED_ORIGINS=https://your-frontend-url.com,https://www.your-frontend-url.com
